<script setup>
import { ref, computed, inject, onMounted } from 'vue'
import { useComponentTheme, useThemeSwitch } from '@/core/theme'
import MacOSMenuBar from '@/components/common/MacOSMenuBar.vue'
import ThemeSwitcher from '@/components/common/ThemeSwitcher.vue'

// ä¸»é¢˜ç³»ç»Ÿ
const themeSystem = inject('themeSystem')
const { currentTheme, currentMode, switchTheme, switchMode } = useThemeSwitch()

// ç»„ä»¶ä¸»é¢˜
const buttonTheme = useComponentTheme('button', computed(() => themeSystem?.getCurrentTheme()?.config.tokens))
const cardTheme = useComponentTheme('card', computed(() => themeSystem?.getCurrentTheme()?.config.tokens))
const inputTheme = useComponentTheme('input', computed(() => themeSystem?.getCurrentTheme()?.config.tokens))

// ç»„ä»¶å˜ä½“
const buttonVariants = ['primary', 'secondary', 'ghost']
const cardVariants = ['elevated', 'outlined', 'filled']
const inputSizes = ['sm', 'md', 'lg']

// KPI æ•°æ®
const kpiData = ref([
  {
    id: 1,
    label: 'ç­¾å•æ€»ä¿è´¹',
    value: 'Â¥2,450,000',
    trend: '+12.5%',
    trendClass: 'trend-up',
    icon: 'ğŸ“Š'
  },
  {
    id: 2,
    label: 'ä¿å•æ•°é‡',
    value: '1,234',
    trend: '+8.3%',
    trendClass: 'trend-up',
    icon: 'ğŸ“‹'
  },
  {
    id: 3,
    label: 'å¹³å‡ä¿è´¹',
    value: 'Â¥1,987',
    trend: '-2.1%',
    trendClass: 'trend-down',
    icon: 'ğŸ’°'
  },
  {
    id: 4,
    label: 'è½¬åŒ–ç‡',
    value: '23.8%',
    trend: '+5.2%',
    trendClass: 'trend-up',
    icon: 'ğŸ“ˆ'
  }
])

// è®¡ç®—å±æ€§
const currentThemeName = computed(() => {
  const themes = {
    'macos': 'macOS é£æ ¼',
    'material': 'Material Design 3',
    'default': 'é»˜è®¤ä¸»é¢˜'
  }
  return themes[currentTheme.value] || 'æœªçŸ¥ä¸»é¢˜'
})

const platformType = computed(() => {
  return themeSystem?.getEngine()?.options?.platform || 'web'
})

const performanceStatus = ref('è‰¯å¥½')
const currentDate = computed(() => new Date().toLocaleDateString('zh-CN'))

// æ ·å¼ç”Ÿæˆå‡½æ•°
const getButtonClass = (variant) => {
  return `${buttonTheme.className.value} ${buttonTheme.className.value}--${variant}`
}

const getButtonStyle = (variant) => {
  const baseStyles = buttonTheme.styles.value
  const variantStyles = buttonTheme.getVariantStyles(variant)?.value || {}
  return { ...baseStyles, ...variantStyles }
}

const getCardClass = (variant) => {
  return `${cardTheme.className.value} ${cardTheme.className.value}--${variant}`
}

const getCardStyle = (variant) => {
  const baseStyles = cardTheme.styles.value
  const variantStyles = cardTheme.getVariantStyles(variant)?.value || {}
  return { ...baseStyles, ...variantStyles }
}

const getInputClass = (size) => {
  return `${inputTheme.className.value} ${inputTheme.className.value}--${size}`
}

const getInputStyle = (size) => {
  const baseStyles = inputTheme.styles.value
  const sizeStyles = inputTheme.getSizeStyles(size)?.value || {}
  return { ...baseStyles, ...sizeStyles }
}

const getKpiCardClass = () => {
  return cardTheme.className.value
}

const getKpiCardStyle = () => {
  return cardTheme.getVariantStyles('elevated')?.value || cardTheme.styles.value
}

// äº‹ä»¶å¤„ç†
const handleButtonClick = (variant) => {
  console.log(`ç‚¹å‡»äº† ${variant} æŒ‰é’®`)
  // è¿™é‡Œå¯ä»¥æ·»åŠ ä¸»é¢˜åˆ‡æ¢é€»è¾‘
}

// ç”Ÿå‘½å‘¨æœŸ
onMounted(async () => {
  console.log('ä¸»é¢˜ç³»ç»Ÿæ¼”ç¤ºåº”ç”¨å·²åŠ è½½')
  console.log('å½“å‰ä¸»é¢˜:', currentTheme.value)
  console.log('å½“å‰æ¨¡å¼:', currentMode.value)
})
</script>

